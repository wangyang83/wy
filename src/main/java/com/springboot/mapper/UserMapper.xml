<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.mapper.UserMapper">
    <insert id="insertUser" parameterType="com.springboot.domain.User">
        insert into user (id,name,password,grade,age,createUser,createDate)
        values (#{id},#{name},#{password},#{grade},#{age},#{createUser},#{createDate})
    </insert>

    <select id="selectUser" parameterType="java.lang.String" resultType="com.springboot.domain.User">
        SELECT * FROM User where name = #{name}
    </select>

    <select id="getUser" parameterType="com.springboot.domain.UserDomain" resultType="com.springboot.domain.User">
        SELECT * FROM User where name = #{name}
    </select>

    <update id="insertPhoto" parameterType="com.springboot.domain.User">
        update User set photo = #{photo} where id = #{id}
    </update>
</mapper>